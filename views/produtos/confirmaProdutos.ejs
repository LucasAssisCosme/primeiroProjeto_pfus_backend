<!-- Cabecalho principal -->
<%- include('../partials/header') %>

<!-- conteudo do index -->
<main class="d-flex flex-column flex-fill text-center justify-content-center">
    <div class="w-50 mx-auto aling-content-center bg-success" style="height: 300px;">
        <!-- se a pagina que chamou for a de cadastro, mostra que o cadastro foi realizado, mostrando o nome do usuario que acabou de ser cadastrado -->
    <% if (tipo == "cadastro") { %>
     <h1 class="text-white">
        <!-- Pega o nome de quem foi cadastrado, vindo do objeto usuarioNovo -->
        Cadastro de <%- produtoNovo.nome %> realizado
    </h1>
         <!-- se a pagina que chamou for a de edição, mostra que o usuario foi editado -->
    <% } else if(tipo == "edicao") { %> 
      <h1 class="text-white">
        <!-- Pega o nome de quem foi atualizado, vindo do objeto atualizado -->
        Edição de <%- renovar.produto %> realizado
    </h1>
       <!-- se a pagina que chamou for a de deletado, mostra que o usuario foi deletado -->
    <% } else { %>     <h1 class="text-white">
       
     Cadastro de <%- deletar.produto %> exluido
     </h1>
       <% }  %> 
       <!-- criando botoes que leva para outra paginas -->
       <a href="/produtos">
        <button class="btn btn-lg btn-secondary mx-2">
           Voltar lista de produtos
       </button>
    </a>

    <a href="/produtos/cadastrar">
        <button class="btn btn-lg btn-primary mx-2">
          Voltar para pagina de cadastro
        </button>
    </a>
    </div>
</main>

<!-- Rodape de todas as paginas -->
<%- include('../partials/footer') %>